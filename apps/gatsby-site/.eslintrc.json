{
	"rules": {
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true,
				"allowTernary": true,
				"allowTaggedTemplates": true
			}
		],
		"@typescript-eslint/camelcase": "off"
	},
	"overrides": [
		{
			"files": ["gatsby-*.js"],
			"rules": {
				"@typescript-eslint/no-var-requires": "off",
				"no-undef": "off"
			}
		}
	],
	"extends": ["plugin:@nrwl/nx/react", "../../.eslintrc"],
	"ignorePatterns": ["!**/*", "public"]
}
